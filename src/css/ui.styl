body
  margin 0px
  overflow hidden

.modal.dao-modao
  top auto
  right auto
  bottom auto
  left auto

.nav-tabs.nav-center-block, .nav-pills.nav-center-block
  text-align center

.nav-tabs.nav-center-block, .nav-pills.nav-center-block
  li
    float none
    display inline-block

.row.items-gutter
  margin-top 10px
  margin-left 0
  margin-right 0

.row.items-gutter [class*='col-']:not(:first-child),
.row.items-gutter [class*='col-']:not(:last-child)
  padding-right 5px
  padding-left 5px

.row.no-gutter
  margin-left 0
  margin-right 0

.row.no-gutter [class*='col-']:not(:first-child),
.row.no-gutter [class*='col-']:not(:last-child)
  padding-right 5px
  padding-left 5px

.row.gutter-2px
  margin-left 2px
  margin-right 2px

.row.gutter-2px [class*='col-']:not(:first-child),
.row.gutter-2px [class*='col-']:not(:last-child)
  padding-right 2px
  padding-left 2px

.form-signin
  max-width 330px
  padding 15px
  margin 0 auto

.form-signin .form-signin-heading, .form-signin .checkbox
  margin-bottom 10px

.form-signin .checkbox
  font-weight normal

.form-signin .form-control
  position relative
  font-size 16px
  height auto
  padding 10px
  box-sizing border-box

.form-signin .form-control:focus
  z-index 2

.form-signin input[type="text"]
  margin-bottom -1px
  border-bottom-left-radius 0
  border-bottom-right-radius 0

.form-signin input[type="password"]
  margin-bottom 10px
  border-top-left-radius 0
  border-top-right-radius 0

.account-wall
  margin-top 20px
  padding 40px 0px 20px 0px
  background-color #f7f7f7
  box-shadow 0px 2px 2px rgba(0, 0, 0, 0.3)

.login-title
  color #555
  font-size 18px
  font-weight 400
  display block

.profile-img
  width 96px
  height 96px
  margin 0 auto 10px
  display block
  border-radius 50%

.need-help
  margin-top 10px

.new-account
  display block
  margin-top 10px

#dao-game
  user-select none
  outline none

#threeCanvas
  z-index -1001573
  user-select none
  outline none
  position absolute

#threeStats
  user-select none
  outline none

.react-draggable
  .panel-heading
    cursor move

.chat-box
  position float
  .chat-messages
    background alpha(#FFFFFF, 0.7)
    border-radius 3px
    width 100%
    height 150px
    overflow-y auto
  form
    clear both
    width 100%
    bottom 0px

.container-fluid.using-equips
  .row
    margin-top 10px

.noselect
  user-select none

.dao-shop
  .dao-shopItem
    border 1px solid black
    &:hover
      outline 2px solid black
      cursor pointer

.dao-skill
  border 1px solid blue
  &:hover
    outline 2px solid blue
    cursor pointer

.dao-hotKeys
  .dao-hotKey-item
    img
      background-color #EEE

.dao-charItems, .dao-charUsingEquips
  .dao-item
    border 1px solid black
  .dao-equipment, .dao-useSelfItem
    &:hover
      outline 2px solid black
      cursor pointer
  .dao-etcItem
    &:hover
      outline 2px solid black

.dao-item
  position relative
  .dao-item-stackCount
    user-select none
    position absolute
    bottom 0
    left 0
    padding-left 2px

.dao-item-label
  user-select none
  background-color #ffffff
  cursor default
  opacity 0.8
  position absolute
  border-style outset
  border-color black
  z-index 20
  &:hover
    cursor pointer
    opacity 1
    background-color  #a0ffff
